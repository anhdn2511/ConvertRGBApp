<Window x:Class="ConvertRGBApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvertRGBApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <TextBox x:Name="RGBText" Height="23" HorizontalAlignment="Left" Margin="276,51,0,0" VerticalAlignment="Top" Width="120" TextChanged="RGB_TextChanged" />
        <TextBox x:Name="HexText" Height="23" HorizontalAlignment="Left" Margin="276,121,0,0" VerticalAlignment="Top" Width="120" TextChanged="Hex_TextChanged"/>
        <TextBox x:Name="Error" Height="23" HorizontalAlignment="Left" Margin="276,196,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="RGBText" Height="28" HorizontalAlignment="Left" Margin="203,48,0,0" Name="RGB" VerticalAlignment="Top" />
        <Label Content="HexText" Height="28" HorizontalAlignment="Left" Margin="203,121,0,0" Name="Hex" VerticalAlignment="Top" />
        <Label Content="Error" Height="28" HorizontalAlignment="Left" Margin="211,194,0,0" Name="Err" VerticalAlignment="Top" />
    </Grid>
</Window>
